<form action="/login" method="post" class="h-[100vh] flex justify-center py-4 px-2 items-center shadow-md rounded-sm">

    <div class="p-4 rounded-sm box  w-[380px] flex flex-col gap-4 ">
        <div>
            <label for="" class="block text-black">ID</label>
            <input type="text" placeholder="ID" name="id_number"
                class="w-full p-2 rounded-sm border border-gray-500 bg-white outline-none focus:ring focus:ring-blue-500 duration-100">
        </div>

        <div>
            <label for="" class="block text-black">Password</label>
            <input type="password" placeholder="Password" name="password"
                class="w-full p-2 rounded-sm border border-gray-500 bg-white outline-none focus:ring focus:ring-blue-500 duration-100">
        </div>

        <!-- errors -->

        <% if (typeof errors !="undefined" ) { %>
            <ul class="text-red-500 bg-red-100 rounded-sm p-2 text-sm border">

                <% errors.forEach(error=> { %>
                    <li>
                        <%= error %>
                    </li>
                    <% }) %>
            </ul>

            <% } %>

                <div class="flex flex-row gap-2">
                    <button
                        class="box flex-1 text-black p-2 font-bold  cursor-pointer">Log
                        In</button>
                    <a class="box text-center flex-1 text-black  font-bold p-2  cursor-pointer  "
                        href="/register">Register</a>
                </div>

    </div>

</form>