<form action="/login" method="post" class="py-5 flex justify-center mt-2 flex-col items-center">

    <div class="glass-borders">

        <div class="w-[380px] styled-container aero-borders flex flex-col gap-4 backdrop-blur-md">
            <header>
                <h1 class="text-center text-2xl font-bold gray">チャットルーム <span class="text-xs font-light"><i>(chat room)</i></span></h1>
            </header>
            <div class="px-4  ">
                <!-- <label for="" class="block text-white">ID</label> -->
                <input type="text" placeholder="ユーザー名 (username)" name="id_number"
                    class="text-gray-700  w-full p-2 border-1 border-gray-500 bg-white outline-none focus:ring focus:ring-blue-500 duration-100">
            </div>

            <div class="px-4  ">
                <input type="password" placeholder="パスワード (password)" name="password"
                    class="text-gray-700  w-full p-2 border-1 border-gray-500 bg-white outline-none focus:ring focus:ring-blue-500 duration-100">

            </div>

            <!-- errors -->

            <% if (typeof errors !="undefined" ) { %>
                <ul class="text-red-500 bg-red-100 rounded-sm p-2 text-sm border">

                    <% errors.forEach(error=> { %>
                        <li>
                            <%= error %>
                        </li>
                        <% }) %>
                </ul>

                <% } %>


                    <div class="flex flex-col gap-2 p-4  ">
                        <button class="styled-button">Log
                            In</button>
                        <!-- <a class="text-center flex-1 text-white  font-bold px-2 py-4  cursor-pointer bg-[#1d2021] "
                        href="/register">Register</a> -->
                    </div>
        </div>



    </div>
    <div class="glass-borders w-[380px]">
        <div class="styled-container aero-borders text-center">
            <a class="text-sm text-white" href="/register">こちらから登録してください <span class="text-xs font-light"><i>(register)</i></a>
        </div>
    </div>

</form>