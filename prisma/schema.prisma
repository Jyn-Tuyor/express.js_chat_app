generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  id_number String @unique
  username String
  password String
  profile UserProfile?
  createdAt DateTime @default(now())
}

enum Gender {
  Male
  Female
  Other
}

model UserProfile {
  id Int @id @default(autoincrement())
  year_level String  
  gender Gender
  hobby_1 String
  hobby_2 String
  not_good String
  bio String

  user User @relation(fields: [userId], references: [id])
  userId Int @unique
}

