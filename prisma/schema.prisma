generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  id_number String @unique
  username String
  password String
  profile Profile?

  sendMessages Chat[] @relation("SentMessages")
  receivedMessages Chat[]  @relation("ReceivedMessages")

  createdAt DateTime @default(now())
}

enum Gender {
  Male
  Female
  Other
}

model Profile {
  id Int @id @default(autoincrement())
  year_level String?  
  gender Gender?
  hobby_1 String?
  hobby_2 String?
  not_good String?
  bio String?

  user User @relation(fields: [userId], references: [id])
  userId Int @unique
}

enum Broadcast {
  public 
  private
}

enum Type {
  joined
  left
  chat
}

model Chat {
  id Int @id @default(autoincrement())
  message String 
  broadcast Broadcast
  type Type

  sender User @relation("SentMessages", fields: [senderId], references: [id])
  receiver User? @relation("ReceivedMessages", fields: [receiverId], references: [id])

  senderId Int 
  receiverId Int? 

  createdAt DateTime @default(now())
}